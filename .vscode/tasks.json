{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve",
            "type": "shell",
            "command": "bundle exec jekyll serve --livereload",
            "group": {
                "kind": "test"
            },
            // "options": {
            //     "cwd": "${workspaceFolder}/solothought"
            // },
            "isBackground": true,
        },
        {
            "label": "Serve with Draft",
            "type": "shell",
            "command": "bundle exec jekyll serve --livereload --draft",
            // "options": {
            //     "cwd": "${workspaceFolder}/solothought"
            // },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground": true,
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "bundle exec jekyll build",
            // "options": {
            //     "cwd": "${workspaceFolder}/solothought"
            // },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build Draft",
            "type": "shell",
            "command": "bundle exec jekyll build --draft",
            // "options": {
            //     "cwd": "${workspaceFolder}/solothought"
            // },
            "group": {
                "kind": "build"
            },
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "bundle exec jekyll clean",
            // "options": {
            //     "cwd": "${workspaceFolder}/solothought"
            // },
        }
    ]
}